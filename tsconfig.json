{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "./dist/",
    "importHelpers": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    // "module": "es6",
    "target": "es6",
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "tslib": ["node_modules/tslib/tslib.d.ts"]
    }
  },
  "include": [
    "./src/client/**/*"
  ],
}